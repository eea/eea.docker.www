##########
## Storage
##########

VOLUME_DRIVER=www-nfs


#############
## NFS Server
#############

NFS_SERVER=10.128.0.55
MOUNT_DIR=/var/lib/docker/volumes/nfs/_data
MOUNT_OPTS=


#################
## Plone backends
#################

KGS_VERSION=6.8
ANON_SCALE=3
AUTH_SCALE=2
ASYNC_SCALE=1
DOWNLOAD_SCALE=2


######################
## PostgreSQL Database
######################

POSTGRES_VERSION=9.4s
POSTGRES_MAX_CONNECTIONS=150
POSTGRES_CRON_1=0 2 * * * root gosu postgres /postgresql.restore/database-restore.sh datafs
POSTGRES_UPSTREM_CRON_1=0 22 * * * root gosu postgres bash -c "pg_dump datafs | gzip > /postgresql.backup/datafs.gz"


#######################################################################
## Sync db, blobs and static resources Production -> Staging -> Testing
#######################################################################
CRON_TASK_1=1 2 * * Sun rsync -e 'ssh -p 2222' -avz --delete --numeric-ids /data/blobstorage/ root@staging.devecs.eea.europa.eu:/mnt/vdb1/sharedblobstorage/blobs/
CRON_TASK_2=0 5 * * * scp -P 2222 -p -q /data/postgresql.backup/datafs.gz root@staging.devecs.eea.europa.eu:/mnt/vdb1/zodbfilestorage/pg_dump/

SSH_AUTH_KEY_1=ssh-rsa  zope-www@parrot
SSH_AUTH_KEY_2=ssh-rsa  postgres@db-pg-b
